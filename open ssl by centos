# check open ssl
openssl version

# update open ssl
cd /usr/local/src
wget https://github.com/openssl/openssl/archive/refs/tags/OpenSSL_1_1_1k.tar.gz
tar xzvf OpenSSL_1_1_1k.tar.gz
cd  openssl-OpenSSL_1_1_1k/
./config

# if you dont installed perl 5,install this
sudo yum install perl

# if make error
sudo yum install make automake gcc gcc-c++ kernel-devel

make
make test
sudo make install

# change old version to new version
sudo mv /usr/bin/openssl /usr/bin/oldopenssl
sudo ln -s /usr/local/bin/openssl /usr/bin/openssl

# get openssl version error
sudo ln -s /usr/local/lib64/libssl.so.1.1 /usr/lib64/
sudo ln -s /usr/local/lib64/libcrypto.so.1.1 /usr/lib64/
